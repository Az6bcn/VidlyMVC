@model Vidly.Models.Rental

@{
    ViewBag.Title = "NewRental";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*JS Model and Controller*@
<script src="~/Scripts/Model/RentalModel.js"></script>
<script src="~/Scripts/Controller/RentalController.js"></script>


<h2>New Rental Form</h2>

<form id="newRentalForm">
    <div class="form-group">
        <label>Customer</label>
        <div class="tt-container">
            <input id="customer" data-rule-validCustomer="true" required type="text" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label>Movie</label>
        <div class="tt-container">
            <input id="movie" type="text" class="form-control" />
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <ul id="movies" class="list-group"></ul>
        </div>
    </div>
   

    <button id="newRentalMovieBtnSubmit" type ="submit" class="btn btn-primary">Submit</button>
</form>

@*Enable client-Side validation*@
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}